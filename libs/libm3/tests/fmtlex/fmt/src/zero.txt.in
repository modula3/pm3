# Last modified on Tue Mar 15 13:12:18 PST 1994 by heydon

# This file tests formating of the floating-point values 0 and -0 for each of
# the 3 formatting styles.

# Sci -------------------------------------------------------------------------

# positive
r S 0 0		# " 0    ",       " 0.0    "
r S 1 0		# " 0.0    ",     " 0.0    "
r S 4 0		# " 0.0000    ",  " 0.0000    "
l S 0 0		# " 0     ",      " 0.0d0   "
l S 1 0		# " 0.0     ",    " 0.0d0   "
l S 4 0		# " 0.0000     ", " 0.0000d0   "
e S 0 0		# " 0     ",      " 0.0x0   "
e S 1 0		# " 0.0     ",    " 0.0x0   "
e S 4 0		# " 0.0000     ", " 0.0000x0   "

# negative
r S 0 -0	# "-0    ",       "-0.0    "
r S 1 -0	# "-0.0    ",     "-0.0    "
r S 4 -0	# "-0.0000    ",  "-0.0000    "
l S 0 -0	# "-0     ",      "-0.0d0   "
l S 1 -0	# "-0.0     ",    "-0.0d0   "
l S 4 -0	# "-0.0000     ", "-0.0000d0   "
e S 0 -0	# "-0     ",      "-0.0x0   "
e S 1 -0	# "-0.0     ",    "-0.0x0   "
e S 4 -0	# "-0.0000     ", "-0.0000x0   "

# Fix -------------------------------------------------------------------------

# positive
r F 0 0		# "0",       "0.0"
r F 1 0		# "0.0",     "0.0"
r F 4 0		# "0.0000",  "0.0000"
l F 0 0		# "0",       "0.0d0"
l F 1 0		# "0.0",     "0.0d0"
l F 4 0		# "0.0000",  "0.0000d0"
e F 0 0		# "0",       "0.0x0"
e F 1 0		# "0.0",     "0.0x0"
e F 4 0		# "0.0000",  "0.0000x0"

# negative
r F 0 -0	# "-0",      "-0.0"
r F 1 -0	# "-0.0",    "-0.0"
r F 4 -0	# "-0.0000", "-0.0000"
l F 0 -0	# "-0",      "-0.0d0"
l F 1 -0	# "-0.0",    "-0.0d0"
l F 4 -0	# "-0.0000", "-0.0000d0"
e F 0 -0	# "-0",      "-0.0x0"
e F 1 -0	# "-0.0",    "-0.0x0"
e F 4 -0	# "-0.0000", "-0.0000x0"

# Auto ------------------------------------------------------------------------

# positive
r A 0 0		# "0", "0.0"
r A 4 0		# "0", "0.0"
l A 0 0		# "0", "0.0d0"
l A 4 0		# "0", "0.0d0"
e A 0 0		# "0", "0.0x0"
e A 4 0		# "0", "0.0x0"

# negative
r A 0 -0	# "-0", "-0.0"
r A 4 -0	# "-0", "-0.0"
l A 0 -0	# "-0", "-0.0d0"
l A 4 -0	# "-0", "-0.0d0"
e A 0 -0	# "-0", "-0.0x0"
e A 4 -0	# "-0", "-0.0x0"
