remove_m3_option ("-gui")
%m3_option ("-times")

import ("libm3")
import ("m3middle")
import ("m3linker")
import ("m3front")

interface ("M3Backend")

IBACK = lookup("IBACK", "")

if equal(IBACK, "gpl")
  % For Linux
  import ("m3back")
  import ("m3objfile")
  implementation ("M3BackLinux")
else if equal(IBACK, "dec")
  % For NT:
  import ("m3back")
  import ("m3objfile")
  implementation ("M3BackWin32")
else
  implementation ("M3BackPosix")
end end

Module ("Arg")
Module ("Msg")
Module ("M3Path")
Module ("Unit")
Module ("Utils")
module ("WebFile")
Interface("M3DriverRep")
Module ("Lib")
Sequence ("Lib", "Lib")
Module ("M3Driver")

library ("m3driver")


