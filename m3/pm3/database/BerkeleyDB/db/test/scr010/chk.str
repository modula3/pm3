#!/bin/sh -
#
# $Id$
#
# Check spelling in quoted strings.

d=../..

[ -f $d/LICENSE ] || {
	echo 'FAIL: cannot find source distribution directory.'
	exit 1
}

t1=__t1

sed -e '/^#include/d' \
    -e '/revid/d' \
    -e '/"/!d' \
    -e 's/^[^"]*//' \
    -e 's/%s/ /g' \
    -e 's/[^"]*$//' \
    -e 's/\\[nt]/ /g' $d/*/*.c $d/*/*.cpp |
spell | sort | comm -23 /dev/stdin spell.ok > $t1

test -s $t1 && {
	cat $t1
	echo "FAIL: found questionable spelling in strings."
	exit 1
}

exit 0
